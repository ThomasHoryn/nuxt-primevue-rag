{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Index DB",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/RAG/index_db.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}/RAG"
    },
    {
      "name": "Python: Query DB",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/RAG/query_db.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}/RAG"
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}/backend"
    }
  ]
}
